<div ng-controller="NavbarLoginController">
	<form class="loginForm navbar-form navbar-right" role="search"  ng-hide="identity.isAuthenticated()">
		<ul class="nav navbar-nav">
		    <li><a href="/signup">Sign Up</a></li>
		</ul>
		<div class="form-group formField">
	    	<input type="text" class="form-control" placeholder="username" ng-model="username">
	    	<input type="password" class="form-control" placeholder="password" ng-model="password">
	  	</div>
	  	<button class="btn btn-primary formButton" ng-click="signIn(username, password)">Sign In</button>
	</form>

	<ul class="nav navbar-nav navbar-right" ng-show="identity.isAuthenticated()">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{identity.currentUser.firstName}}{{" "}}{{ identity.currentUser.lastName}} <span class="caret"></span></a>
			<ul class="dropdown-menu">
				<li><a href="/admin/user" ng-show="identity.currentUser.isAdmin()">User Admin</a></li>
				<li><a href="#" ng-click="signOut()">Sign out</a></li>
			</ul>
		</li>
	</ul>
</div>